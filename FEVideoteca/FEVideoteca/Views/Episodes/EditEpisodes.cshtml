@model FEVideoteca.Models.Episodes

@{
    ViewData["Title"] = "EditEpisodes";
}

<style>

    body {
        background-color: #7BA7F2;
        color: #000;
    }

</style>

<h1>EditEpisodes</h1>

<h4>Episodes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEpisodes" asp-controller="Episodes" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EpisodeId" class="control-label"></label>
                <input asp-for="EpisodeId" class="form-control" readonly/>
                <span asp-validation-for="EpisodeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tittle" class="control-label"></label>
                <input asp-for="Tittle" class="form-control" required/>
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" required/>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EpisodeNumber" class="control-label"></label>
                <input asp-for="EpisodeNumber" class="form-control" required/>
                <span asp-validation-for="EpisodeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoviesSeriesId" class="control-label"></label>
                <input asp-for="MoviesSeriesId" class="form-control" readonly/>
                <span asp-validation-for="MoviesSeriesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ConsultarEpisodes">Volver a la lista</a>
</div>

